<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Category Icon -->
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/textViewCategoryIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"
                tools:text="🍽️" />

        </LinearLayout>

        <!-- Transaction Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food &amp; Dining"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                tools:text="Food &amp; Dining" />

            <TextView
                android:id="@+id/textViewTransactionNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Lunch at restaurant"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/text_secondary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Lunch at restaurant" />

            <TextView
                android:id="@+id/textViewTransactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Today, 2:30 PM"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/text_disabled"
                tools:text="Today, 2:30 PM" />

        </LinearLayout>

        <!-- Amount -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/textViewAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$24.50"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textColor="@color/expense_icon"
                android:textStyle="bold"
                tools:text="$24.50" />

            <TextView
                android:id="@+id/textViewAccountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Credit Card"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/text_secondary"
                android:gravity="end"
                tools:text="Credit Card" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
