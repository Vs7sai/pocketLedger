<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/surface">

    <!-- Gradient Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/budget_card_gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Row with Category Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Category Icon Container -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/category_icon_background">

                <TextView
                    android:id="@+id/textViewCategoryIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    tools:text="ðŸ½ï¸" />

            </FrameLayout>

            <!-- Category Name and Budget Amount -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/textViewCategoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Food &amp; Dining" />

                <TextView
                    android:id="@+id/textViewBudgetAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    tools:text="$500.00" />

            </LinearLayout>

            <!-- Progress Percentage Badge -->
            <TextView
                android:id="@+id/textViewProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@drawable/progress_badge_background"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="75%" />

        </LinearLayout>

        <!-- Progress Bar Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Progress Bar -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@drawable/progress_bar_background">

                <View
                    android:id="@+id/progressBar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/progress_bar_fill"
                    android:layout_gravity="start|center_vertical" />

            </FrameLayout>

            <!-- Progress Labels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_green"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spent"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewSpentAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        tools:text="$375.00" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_blue"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remaining"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewRemainingAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        tools:text="$125.00" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEdit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:text="Edit"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:icon="@drawable/ic_edit"
                app:iconSize="16dp"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Delete"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:icon="@drawable/ic_delete"
                app:iconSize="16dp"
                app:iconGravity="textStart"
                app:strokeColor="@color/negative_balance"
                android:textColor="@color/negative_balance" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
